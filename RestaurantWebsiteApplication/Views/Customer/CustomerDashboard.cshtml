@model List<RestaurantWebsiteApplication.Models.ViewModels.AddBookRequest>




@{
    ViewData["Title"] = "Customer Dashboard";
}







<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Welcome, @ViewBag.CustomerName</h2>
        <p>Your upcoming bookings:</p>
        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Booking Date</th>
                        <th>From Time</th>
                        <th>To Time</th>
                        <th>Table Number</th>
                        <th>Actions</th> <!-- Added for delete action -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.BookingDate.ToShortDateString()</td>
                            <td>@booking.FromTime</td>
                            <td>@booking.ToTime</td>
                            <td>@booking.TableNumber</td>
                            <td>
                                @* Check if booking can be cancelled *@
                                @if (CanCancelBooking(booking))
                                {
                                    <form asp-controller="Booking" asp-action="Cancel" method="post">
                                        <input type="hidden" name="bookingId" value="@booking.BookingId" />
                                        <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Cancellation not available</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No upcoming bookings found.</p>
        }
    </div>

    <div class="container mt-4">
        <a class="btn btn-primary" asp-controller="Booking" asp-action="Book">Book a Table</a>
    </div>
</body>
</html>

@functions {
    bool CanCancelBooking(RestaurantWebsiteApplication.Models.ViewModels.AddBookRequest booking)
    {
        // Check if the booking can be cancelled
        var bookingDateTime = booking.BookingDate.Add(booking.FromTime);
        var cancelWindowEnd = bookingDateTime.AddHours(-24);
        return DateTime.Now < cancelWindowEnd;
    }
}

@model RestaurantWebsiteApplication.Models.ViewModels.CheckOutViewModel

<h2>checkout page</h2>

<form asp-action="CheckOut" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="CustomerId"></label>
        <input asp-for="CustomerId" class="form-control" />
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GrossAmount"></label>
        <input asp-for="GrossAmount" class="form-control" />
        <span asp-validation-for="GrossAmount" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Check-Out</button>
</form>


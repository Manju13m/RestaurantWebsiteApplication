@model RestaurantWebsiteApplication.Models.ViewModels.AddBookRequest



@{
    ViewData["Title"] = "Book a Table";
    var minDate = DateTime.Now.ToString("yyyy-MM-dd");
    var maxDate = DateTime.Now.AddDays(3).ToString("yyyy-MM-dd");
    var minTime = "11:00";
    var maxTime = "23:00";
}

<h2>Book a Table</h2>

<form asp-controller="Booking" asp-action="Book" method="post">
    <div class="form-group">
        <label asp-for="CustomerName" class="control-label"></label>
        <input asp-for="CustomerName" class="form-control" type="text" />
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label"></label>
        <input asp-for="BookingDate" class="form-control" type="date" min="@minDate" max="@maxDate" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FromTime" class="control-label"></label>
        <input asp-for="FromTime" class="form-control" type="time" min="@minTime" max="@maxTime" />
        <span asp-validation-for="FromTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ToTime" class="control-label"></label>
        <input asp-for="ToTime" class="form-control" type="time" min="@minTime" max="@maxTime" />
        <span asp-validation-for="ToTime" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TableNumber" class="control-label"></label>
        <select asp-for="TableNumber" class="form-control">
            <option value="">Select Table Number</option>
            @for (int i = 1; i <= 8; i++)
            {
                <option value="@i">@i</option>
            }
        </select>
        <span asp-validation-for="TableNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Book" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
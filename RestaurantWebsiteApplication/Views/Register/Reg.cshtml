@model RestaurantWebsiteApplication.Models.ViewModels.AddRegRequest

@{
    ViewData["Title"] = "Registration Form";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>Registration Form</h2>
    </div>
</div>

<div class="container py-4">
    <form method="post">
        <div class="mb-3">
            <label for="firstName" class="form-label">First Name</label>
            <input type="text" id="firstName" class="form-control" asp-for="FirstName" maxlength="20" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" id="lastName" class="form-control" asp-for="LastName" maxlength="20" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input type="text" id="address" class="form-control" asp-for="Address" maxlength="50" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="phoneNo" class="form-label">Phone Number</label>
            <input type="tel" id="phoneNo" class="form-control" asp-for="PhoneNo" required pattern="\d{10}" maxlength="10" />
            <span asp-validation-for="PhoneNo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="role" class="form-label">Role</label>
            <select id="role" class="form-control" asp-for="Role">
                <option value="">---- Select Role ----</option>
                <option value="Admin">Admin</option>
                <option value="Customer">Customer</option>
            </select>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('success') === 'true') {
                alert('Registration successful. Thank you!');
            }
        });
    </script>
}

<style>
    body {
        background-color: #f8f9fa; /* Light background color */
    }

    .container {
        max-width: 600px; /* Limit width for readability */
        margin: auto; /* Center align */
    }

    .bg-secondary {
        background-color: #6c757d; /* Darker background color */
        color: #fff; /* Light text color */
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker hover color */
            border-color: #0056b3;
        }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px; /* Rounded corners for inputs */
    }
</style>

 @model RestaurantWebsiteApplication.Models.ViewModels.AddRegRequest



<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container" style="font-size: 24px;">
        Registration Form
    </div>
</div>

<div class="container py-2">
    <form method="post">
        <div class="mb-2">
            <label class="form-label">FirstName</label>
            <input type="text" class="form-control" id="firstName" asp-for="FirstName" maxlength="20" />
            <span asp-validation-for="FirstName" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">LaststName</label>
            <input type="text" class="form-control" id="lastName" asp-for="LastName" maxlength="20" />
            <span asp-validation-for="LastName" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input type="text" class="form-control" id="adress" asp-for="Address" maxlength="50" />
            <span asp-validation-for="Address" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>

        <div class="mb-3">
            <label class="form-label">PhoneNo</label>
            <input type="tel" class="form-control" id="phoneNo" asp-for="PhoneNo" required pattern="\d{10}" maxlength="10" />
            <span asp-validation-for="PhoneNo" class="text-danger"></span>

        </div>

        <div class="mb-3">

            <label class="form-label">Email</label>
            <input type="email" class="form-control" id="email" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label class="form-label">Role</label>
            <select class="form-control" id="role" asp-for="Role">
                <option value="">----select Role----</option>
                <option value="Admin">Admin</option>
                <option value="Customer">Customer</option>
            </select>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">Register</button>

        </div>
    </form>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const urlParams = new URLSearchParams(window.location.search);
            if (urlParams.get('success') === 'true') {
                alert('Registration successful. Thank you!');
            }
        });
    </script>
}

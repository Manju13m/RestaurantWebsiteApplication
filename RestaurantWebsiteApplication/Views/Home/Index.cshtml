@{
    ViewData["Title"] = "Home Page";
}

<div class="homepage">
    <div class="welcome-message">
        <h1>Welcome to Trupthi Restaurant</h1>
        <p class="quotation">"Food is a basic necessity of life. Every meal we consume is a gift, and wasting it is a disservice to the countless hands that brought it to our table. Let's cherish our food, share with those in need, and strive for a world where no one goes hungry."</p>
    </div>
</div>

<style>
    .homepage {
        position: relative;
        width: 100%;
        height: 100vh;
        background: url('https://www.behindwoods.com/tamil-actress/nayanthara/nayanthara-stills-photos-pictures-576.jpg ') no-repeat center center fixed;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .homepage::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5); /* Adjust the opacity for a dull effect */
            z-index: 1;
        }

    .welcome-message {
        position: relative;
        z-index: 2;
        text-align: center;
    }

        .welcome-message h1 {
            font-size: 3em;
            margin-bottom: 20px;
            color: #ff9900; /* Custom color for the heading */
        }

        .welcome-message .quotation {
            font-size: 1.5em;
            font-style: italic;
            color: #ffffff; /* Custom color for the paragraph */
        }
</style>

@model RestaurantWebsiteApplication.Models.ViewModels.AddLogRequest

@{
    ViewData["Title"] = "Login Form";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h2>Login Form</h2>
    </div>
</div>

<div class="container py-4">
    <form method="post">
        <div class="mb-3">
            <label for="userid" class="form-label">User ID</label>
            <input type="text" id="userid" class="form-control" asp-for="UserId" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" id="password" class="form-control" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>
    </form>
</div>

<style>
    body {
        background-color: #f8f9fa; /* Light background color */
    }

    .container {
        max-width: 600px; /* Limit width for readability */
        margin: auto; /* Center align */
    }

    .bg-secondary {
        background-color: #6c757d; /* Darker background color */
        color: #fff; /* Light text color */
    }

    .btn-primary {
        background-color: #007bff; /* Primary button color */
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3; /* Darker hover color */
            border-color: #0056b3;
        }

    .form-label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 4px; /* Rounded corners for inputs */
    }
</style>

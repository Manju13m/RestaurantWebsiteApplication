@model List<RestaurantWebsiteApplication.Models.ViewModels.AddBookRequest>



@{
    ViewData["Title"] = "Admin Dashboard";
}


<header>
    <div class="admin-info">
        <span>Welcome, <strong>@ViewBag.AdminName</strong></span>
        <a class="btn btn-logout" asp-area="" asp-controller="Home" asp-action="Index">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>

    </div>
</header>

<div class="dashboard-stats">
    <div class="stat-item">
        <p>Total customers registered in the last 7 days: @ViewBag.TotalCustomersLast7Days</p>
    </div>
    <div class="stat-item">
        <p>Total bookings done for the next 3 days: @ViewBag.TotalBookingsNext3Days</p>
    </div>
    <div class="stat-item">
        <p>Total cancellations in the last 3 days: @ViewBag.TotalCancellationsLast3Days</p>
    </div>
</div>

<div class="booking-table-container">
    <h2>Upcoming Active Bookings</h2>
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Customer ID</th>
                        <th>Booking ID</th>
                        <th>From Time</th>
                        <th>To Time</th>
                        <th>Date</th>
                        <th>Table Number</th>
                        <th>Check-In</th>
                        <th>Check-Out</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td>@booking.UserId</td>
                            <td>@booking.BookingId</td>
                            <td>@booking.FromTime</td>
                            <td>@booking.ToTime</td>
                            <td>@booking.BookingDate.ToString("dd/MM/yyyy")</td>

                            @*<td>@booking.BookingDate.ToShortDateString()</td>*@

                            <td>@booking.TableNumber</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-controller="CheckIn" asp-action="CheckIn">Check-In</a>
                            </td>
                            <td>
                                <a class="btn btn-success btn-sm" asp-controller="CheckOut" asp-action="CheckOut">Check-Out</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>No upcoming bookings found.</p>
    }
</div>

<div class="export-form">
    <form asp-action="DownloadBookingsReport" method="post">

       

       <div class="form-group">
            <label for="startDate">Start Date</label>
            <input type="date" id="startDate" name="startDate" class="form-control"  required asp-format="{0:yyyy-MM-dd}" data-date-foramt="DD/MM/yyyy"/>
        </div>
        <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="date" id="endDate" name="endDate" class="form-control"  />
        </div>
        <button type="submit" class="btn btn-primary">Export Bookings</button>
    </form>
</div>



<style>
    body {
        padding: 0 10px;
    }

    .admin-info {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-bottom: 20px;
    }

        .admin-info span {
            margin-right: 10px;
        }

    .dashboard-stats {
        background-color: #fff;
        padding: 10px;
        margin: 0 5px 20px 5px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
        background-color: #f8f9fa;
    }

    .stat-item {
        margin: 10px 0;
        padding: 10px;
        border-bottom: 1px solid #eee;
        background-color: #e9ecef;
    }

    .export-form {
        background-color: #fff;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
        margin: 0 5px 20px 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        font-size: 14px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .btn-primary {
        background-color: #ff4500;
        color: #fff;
        border: none;
        padding: 10px 20px;
        font-size: 14px;
        cursor: pointer;
        border-radius: 4px;
    }

        .btn-primary:hover {
            background-color: #ff6347;
        }

    .booking-table-container {
        background-color: #fff;
        padding: 15px;
        border-radius: 5px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.05);
        margin: 0 5px 20px 5px;
        max-height: 400px;
        overflow-y: auto; /* Enable vertical scrolling */
    }

    .table-responsive {
        overflow-x: auto;
    }

    .table {
        width: 100%;
        margin-bottom: 0;
    }

        .table th, .table td {
            padding: 8px;
            vertical-align: middle;
        }

        .table th {
            background-color: #007bff;
            color: white; /* White text color for table headers */
        }

    .btn {
        display: inline-block;
        padding: 8px 16px;
        font-size: 14px;
        text-align: center;
        cursor: pointer;
        border: 1px solid transparent;
        border-radius: 4px;
        transition: all 0.3s ease;
    }

    .btn-primary {
        color: #fff;
        background-color: #ff4500;
        border-color: #ffcba4;
    }

        .btn-primary:hover {
            background-color: #ff6347;
            border-color: #ff6347;
        }

    .btn-success {
        color: #fff;
        background-color: #28a745;
        border-color: #28a745;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #218838;
        }

    .btn-sm {
        padding: 6px 12px;
        font-size: 12px;
    }

    .btn-logout {
        background-color: #ff4500; /* Orange color */
        color: #fff; /* White text */
        border: none;
        padding: 5px 10px; /* Compact padding */
        font-size: 14px;
        cursor: pointer;
        border-radius: 4px;
        text-decoration: none; /* Remove underline */
        display: inline-block; /* Ensure inline display */
    }

        .btn-logout:hover {
            background-color: #ff6347; /* Lighter orange on hover */
        }

        .btn-logout i {
            margin-right: 5px; /* Space between icon and text */
        }


</style>

@section Scripts {
    <script>
        $(function () {
            $(".datepicker").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true
            });
        });
    </script>
}
